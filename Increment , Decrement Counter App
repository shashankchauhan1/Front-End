<body>
    
    <div class="container" style="width: 30%; margin-top: 10%;">
        <div class="row">
            <center><h2>Increment and decrement</h2></center>
        </div><br>
        <div class="row">
            <div class="col-4"><center><button onclick="decrement()" class="btn btn-warning"><i class="fa-solid fa-minus"></i></button></center></div>
            <div class="col-4 "><center><h1 class="val">0</h1></center></div>
            <div class="col-4"><center><button onclick="increment()" class="btn btn-primary"><i class="fa-solid fa-plus"></i></button></center></div>
        </div><br>
        <div class="row">
            <center><button class="btn btn-danger" onclick="reset()">Reset</button></center>
        </div>
    </div>

<script>
    let val=document.querySelector(".val");
    
    function decrement(){
        let v=Number(val.textContent);
        v-=1;
        val.textContent=v;
    }

    function increment(){
        let v=Number(val.textContent);
        v+=1;
        val.innerHTML=v;
    }
    function reset(){
        val.textContent=0;
    }
</script>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
